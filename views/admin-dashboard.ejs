<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | UAA System</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gradient-to-br from-blue-100 to-blue-200 min-h-screen">
    <div class="flex">
      <!-- Sidebar -->
      <div
        class="w-1/5 min-h-screen bg-white/70 backdrop-blur-lg shadow-lg p-6"
      >
        <h2 class="text-2xl font-bold text-blue-700 mb-8">Navigation</h2>

        <nav class="space-y-4">
          <!-- Departments List -->
          <a
            href="/admin/departments"
            class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-700 font-medium hover:bg-blue-100 transition"
          >
            Departments List
          </a>

          <!-- Create Department -->
          <a
            href="/admin/departments/create"
            class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-700 font-medium hover:bg-blue-100 transition"
          >
            Create Department
          </a>

          <!-- Users (for future user story) -->
          <a
            href="/admin/users"
            class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-700 font-medium hover:bg-blue-100 transition"
          >
            Users
          </a>

          <!-- Create User (added) -->
          <a
            href="/admin/create-user"
            class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-700 font-medium hover:bg-blue-100 transition"
          >
            Create User
          </a>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="w-4/5 p-10">
        <h1 class="text-3xl font-bold text-blue-700 mb-8">
          Dashboard Overview
        </h1>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <!-- Total Departments -->
          <div
            class="bg-white/90 backdrop-blur-lg shadow-md rounded-xl p-6 text-center border border-blue-200"
          >
            <p class="text-gray-600 font-medium">Total Departments</p>
            <h2 class="text-4xl font-bold text-blue-700">
              <%= totalDepartments %>
            </h2>
          </div>

          <!-- Total Students -->
          <div
            class="bg-green-100/80 backdrop-blur-lg shadow-md rounded-xl p-6 text-center border border-green-200"
          >
            <p class="text-gray-600 font-medium">Total Students</p>
            <h2 class="text-4xl font-bold text-green-700">
              <%= studentCount %>
            </h2>
          </div>

          <!-- Total Professors -->
          <div
            class="bg-orange-100/80 backdrop-blur-lg shadow-md rounded-xl p-6 text-center border border-orange-200"
          >
            <p class="text-gray-600 font-medium">Total Professors</p>
            <h2 class="text-4xl font-bold text-orange-700">
              <%= professorCount %>
            </h2>
          </div>

          <!-- Total HODs -->
          <div
            class="bg-purple-100/80 backdrop-blur-lg shadow-md rounded-xl p-6 text-center border border-purple-200"
          >
            <p class="text-gray-600 font-medium">Total HODs</p>
            <h2 class="text-4xl font-bold text-purple-700"><%= hodCount %></h2>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
