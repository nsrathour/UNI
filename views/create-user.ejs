<%- include("layout") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User | UAAS</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-blue-100 to-blue-200 min-h-screen">

    <div class="max-w-xl mx-auto bg-white/80 backdrop-blur-lg p-8 shadow-xl mt-16 rounded-2xl
                border border-blue-200">

        <h1 class="text-3xl font-bold text-blue-700 mb-8 text-center">
            Create New User
        </h1>

        <form action="/admin/create-user" method="POST" class="space-y-5">

            <!-- FULL NAME -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Full Name</label>
                <input type="text" 
                       name="name"
                       placeholder="Enter full name"
                       class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                              focus:outline-none focus:ring-2 focus:ring-blue-400"
                       required>
            </div>

            <!-- EMAIL -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Email</label>
                <input type="email" 
                       name="email"
                       placeholder="Enter email"
                       class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                              focus:outline-none focus:ring-2 focus:ring-blue-400"
                       required>
            </div>

            <!-- PASSWORD -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Password</label>
                <input type="password" 
                       name="password"
                       placeholder="Enter password"
                       class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                              focus:outline-none focus:ring-2 focus:ring-blue-400"
                       required>
            </div>

            <!-- PHONE -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Phone Number</label>
                <input type="text" 
                       name="phone"
                       placeholder="Enter phone"
                       class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                              focus:outline-none focus:ring-2 focus:ring-blue-400"
                       required>
            </div>

            <!-- DEPARTMENT -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Department</label>
                <select name="department"
                        class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                               focus:outline-none focus:ring-2 focus:ring-blue-400"
                        required>
                    <option disabled selected>Select Department</option>
                    <% departments.forEach(dep => { %>
                        <option value="<%= dep._id %>"><%= dep.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- ROLE -->
            <div>
                <label class="block text-blue-700 font-medium mb-1">Role</label>
                <select name="role"
                        class="w-full border border-blue-200 rounded-lg p-3 bg-blue-50/40
                               focus:outline-none focus:ring-2 focus:ring-blue-400"
                        required>
                    <option value="Student">Student</option>
                    <option value="Professor">Professor</option>
                    <option value="HOD">HOD</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <!-- BUTTON -->
            <button class="w-full bg-blue-600 text-white font-semibold py-3 rounded-lg
                           shadow-md hover:bg-blue-700 transition">
                Create User
            </button>

        </form>

    </div>

</body>
</html>
