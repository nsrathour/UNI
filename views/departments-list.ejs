<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departments List | UAA System</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-blue-100 to-blue-200 min-h-screen">

    <div class="flex">

        <!-- Sidebar -->
        <div class="w-1/5 min-h-screen bg-white/70 backdrop-blur-lg shadow-lg p-6">

            <h2 class="text-2xl font-bold text-blue-700 mb-8">Navigation</h2>

            <nav class="space-y-4">
                <a href="/admin/dashboard"
                   class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg
                   text-blue-700 font-medium hover:bg-blue-100 transition">
                   Dashboard
                </a>

                <a href="/admin/departments"
                   class="block px-4 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md
                   hover:bg-blue-700 transition">
                   Departments List
                </a>

                <a href="/admin/departments/create"
                   class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg
                   text-blue-700 font-medium hover:bg-blue-100 transition">
                   Create Department
                </a>
            </nav>

        </div>

        <!-- Main Section -->
        <div class="w-4/5 p-10">

            <h1 class="text-3xl font-bold text-blue-700 mb-8">All Departments</h1>

            <!-- Search + Filter Row -->
            <div class="flex justify-between items-center mb-6">

                <!-- Search -->
                <input 
                    id="searchInput"
                    type="text"
                    placeholder="Search by department name"
                    class="w-1/2 px-4 py-2 rounded-lg border border-gray-300
                    focus:outline-none focus:ring-2 focus:ring-blue-500"
                />

                <!-- Filter by Type -->
                <select 
                    id="filterType"
                    class="px-4 py-2 rounded-lg border border-gray-300 bg-white
                    focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    <option value="all">Filter by Type</option>
                    <option value="UG">UG</option>
                    <option value="PG">PG</option>
                    <option value="Research">Research</option>
                </select>

            </div>

            <!-- Table -->
            <div class="bg-white/80 backdrop-blur-lg shadow-xl rounded-xl p-8 border border-blue-200">

                <table class="min-w-full border-collapse" id="deptTable">
                    <thead>
                        <tr class="bg-blue-100 border-b border-blue-200">
                            <th class="p-4 text-left font-semibold text-blue-700">Department Name</th>
                            <th class="p-4 text-left font-semibold text-blue-700">Type</th>
                            <th class="p-4 text-left font-semibold text-blue-700">Address</th>
                            <th class="p-4 text-center font-semibold text-blue-700">Actions</th>
                        </tr>
                    </thead>

                    <tbody id="tableBody">
                        <% departments.forEach(d => { %>
                            <tr class="border-b border-blue-100 hover:bg-blue-50 transition">
                                <td class="p-4 text-gray-800"><%= d.name %></td>
                                <td class="p-4 text-gray-800"><%= d.type %></td>
                                <td class="p-4 text-gray-800"><%= d.address %></td>

                                <td class="p-4 text-center">
                                    <a href="/admin/departments/edit/<%= d._id %>"
                                       class="px-3 py-1 bg-blue-600 text-white rounded-lg hover:bg-blue-700 mr-3">
                                       Edit
                                    </a>

                                    <a href="/admin/departments/delete/<%= d._id %>"
                                       class="px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600">
                                       Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <% if (departments.length === 0) { %>
                    <p class="text-center text-gray-600 py-6">No departments found.</p>
                <% } %>

            </div>

        </div>

    </div>

    <!-- Client-Side Search + Filter -->
    <script>
        const searchInput = document.getElementById("searchInput");
        const filterType = document.getElementById("filterType");
        const rows = document.querySelectorAll("#tableBody tr");

        function filterTable() {
            const searchValue = searchInput.value.toLowerCase();
            const filterValue = filterType.value;

            rows.forEach(row => {
                const name = row.children[0].textContent.toLowerCase();
                const type = row.children[1].textContent;

                const matchesSearch = name.includes(searchValue);
                const matchesFilter = filterValue === "all" || type === filterValue;

                if (matchesSearch && matchesFilter) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        searchInput.addEventListener("input", filterTable);
        filterType.addEventListener("change", filterTable);
    </script>

</body>
</html>
