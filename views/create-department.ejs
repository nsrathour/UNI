<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Department | UAA System</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-blue-100 to-blue-200 min-h-screen">

    <div class="flex">

        <!-- Sidebar -->
        <div class="w-1/5 min-h-screen bg-white/70 backdrop-blur-lg shadow-lg p-6">

            <h2 class="text-2xl font-bold text-blue-700 mb-8">Navigation</h2>

            <nav class="space-y-4">

                <!-- Dashboard -->
                <a href="/admin/dashboard"
                   class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg 
                   text-blue-700 font-medium hover:bg-blue-100 transition">
                   Dashboard
                </a>

                <!-- Departments List -->
                <a href="/admin/departments"
                   class="block px-4 py-3 bg-blue-50 border border-blue-200 rounded-lg 
                   text-blue-700 font-medium hover:bg-blue-100 transition">
                   Departments List
                </a>

                <!-- Create Department -->
                <a href="/admin/departments/create"
                   class="block px-4 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md 
                   hover:bg-blue-700 transition">
                   Create Department
                </a>

            </nav>

        </div>

        <!-- Main Content -->
        <div class="w-4/5 p-10">

            <h1 class="text-3xl font-bold text-blue-700 mb-6">Create New Department</h1>

            <!-- Success/Error Message -->
            <% if (message) { %>
                <div class="mb-6 p-4 rounded-lg 
                    <%= message.includes('success') ? 'bg-green-100 text-green-700 border border-green-300' 
                                                   : 'bg-red-100 text-red-700 border border-red-300' %>">
                    <%= message %>
                </div>
            <% } %>

            <!-- Form Container -->
            <div class="bg-white/80 backdrop-blur-lg shadow-xl rounded-xl p-8 border border-blue-200">

                <form action="/admin/departments/create" method="POST" class="space-y-6">

                    <!-- Department Name -->
                    <div>
                        <label class="block text-lg font-medium text-gray-700">Department Name</label>
                        <input type="text" name="name" required
                               class="w-full mt-2 px-4 py-3 rounded-lg border border-gray-300 
                               focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <!-- Program Type -->
                    <div>
                        <label class="block text-lg font-medium text-gray-700">Program Type</label>
                        <select name="type" required
                                class="w-full mt-2 px-4 py-3 rounded-lg border border-gray-300 
                                focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Select Type</option>
                            <option value="UG">UG</option>
                            <option value="PG">PG</option>
                            <option value="Research">Research</option>
                        </select>
                    </div>

                    <!-- Address -->
                    <div>
                        <label class="block text-lg font-medium text-gray-700">Address</label>
                        <textarea name="address" required rows="4"
                                  class="w-full mt-2 px-4 py-3 rounded-lg border border-gray-300 
                                  focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                            class="w-full bg-blue-600 text-white py-3 rounded-lg font-medium shadow-lg 
                            hover:bg-blue-700 transition">
                        Create Department
                    </button>

                </form>

            </div>

        </div>

    </div>

</body>
</html>
